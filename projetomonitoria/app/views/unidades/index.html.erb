<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th>Area</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unidades.each do |unidade| %>
      <tr>
        <td><%= unidade.descricao %></td>
        <td><%= unidade.area.descricao %></td>
        <td><%= link_to 'Disciplinas', unidade_disciplinas_path(unidade.id) %></td>
       </tr>
    <% end %>
  </tbody>
</table>

