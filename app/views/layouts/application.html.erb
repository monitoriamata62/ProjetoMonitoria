<!DOCTYPE html>
<html>
<head>
  <title>Monitoria UFBA</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body >
<div class="All">
<nav class="navbar navbar-default MenuAplicacao">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

    </div>-->
    
    <% @User = current_user %>
    <%= link_to 'Monitoria - UFBA', root_path, class: 'navbar-brand',style: "padding-right: 5%;"  %>
    <%= link_to 'Unidades', unidades_path, class: 'navbar-brand ItemMenu' %>
    <%= link_to 'Disciplinas', disciplinas_path, class: 'navbar-brand ItemMenu' %>
    <%= link_to 'Monitorias', monitoria_path, class: 'navbar-brand ItemMenu' %>
    <%= link_to 'Monitores', monitores_path, class: 'navbar-brand ItemMenu' %>
    <%if @User != nil %>
      <%if @User.role == 'admin' %>
        <%= link_to 'Administrar', rails_admin_path, class: 'navbar-brand ItemMenu' %>
      <%end%>
    <%end%>
    <% if user_signed_in? %>
        <%= link_to 'Sair', destroy_user_session_path, method: :delete, class: 'navbar-brand login' %>
    <% else %>
        <%= link_to 'Login', new_user_session_path, class: 'navbar-brand login'%>
    <% end %>




    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <ul class="nav navbar-nav navbar-right">

      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<%= yield %>


</div>


</body>
</html>
