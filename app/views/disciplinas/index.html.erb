<p id="notice"><%= notice %></p>

<h1>Disciplinas</h1>

<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th>Unidade</th>
      <th>Sigla</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disciplinas.each do |disciplina| %>
      <tr>
        <td><%= disciplina.descricao %></td>
        <td><%= disciplina.unidade.descricao %></td>
        <td><%= disciplina.sigla %></td>
        <td><%= link_to 'Show', disciplina %></td>
        <td><%= link_to 'Edit', edit_disciplina_path(disciplina) %></td>
        <td><%= link_to 'Destroy', disciplina, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Monitoria', disciplina_monitoria_path(disciplina.id)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

