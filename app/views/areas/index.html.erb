<p id="notice"><%= notice %></p>

<html lang="pt-br">
  
<%= form_tag(areas_path, :method => :get) do %>
  <%= text_field_tag 'search', nil, placeholder: 'Digite a área' %>
  <%= submit_tag "Pesquisar" %>
<% end %>

<h1>Áreas</h1>

<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.descricao %></td>
        <td><%= link_to 'Unidades', area_unidades_path(area.id)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="btn btn-primary"> <%= link_to 'Unidades', unidades_path, {:style=>'color:#FFFFFF;', :class => "css_class"} %></div>
<div class="btn btn-primary"> <%= link_to 'Disciplinas', disciplinas_path, {:style=>'color:#FFFFFF;', :class => "css_class"} %> </div>
<div class="btn btn-primary"><%= link_to 'Login', utilizadors_path, {:style=>'color:#FFFFFF;', :class => "css_class"} %></div>

