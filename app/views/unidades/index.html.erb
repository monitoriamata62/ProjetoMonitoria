<p id="notice"><%= notice %></p>

<h1>Unidades</h1>

<%= form_tag(unidades_path, :method => :get) do %>
  <%= text_field_tag 'search', nil, placeholder: 'Digite a unidade' %>
  <%= submit_tag "Pesquisar" %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th>Area</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unidades.each do |unidade| %>
      <tr>
        <td><%= unidade.descricao %></td>
        <td><%= unidade.area.descricao %></td>
        <td><%= link_to 'Disciplinas', unidade_disciplinas_path(unidade.id) %></td>
       </tr>
    <% end %>
  </tbody>
</table>

<br>
<button type="button" class="btn btn-primary"><%= link_to 'Voltar', :back, {:style=>'color:#FFFFFF;', :class => "css_class"} %></button>


